import random

def switch(a_1,b):
  result=6-b-a_1
  return result
result = 0  
iteration = 10000
for i in range(1,iteration):
  a=random.randint(1,3)
  b=random.randint(1,3)
  if a == 1: 
    a_1=random.randint(2,3)
  elif a == 2:
    a_1=random.choice([1,3])
  else:
      a_1=random.randint(1,2)
  b = switch(a_1,b)
  if b==a:
    result+=1

print(result/iteration)
  

   
   
